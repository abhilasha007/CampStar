<% layout('layouts/boilerplate')%>

<div id="map" style="width: 100%; height: 450px;"></div>

<h1 class="mb-4 mt-2"> All campgrounds </h1>

<% for(let camp of camps){ %>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <% if(camp.images.length) { %>
            <img src="<%= camp.images[0].url %>" alt="" class="img-fluid">
            <% } else { %>
            <img src="https://res.cloudinary.com/df8hyjwp9/image/upload/v1641443187/CampStar/vrl5ltiwhwz7rs90cuo1.jpg" alt="" class="img-fluid">
            <% } %>
        </div>
        <div class="col-md-8">
            <h5 class="card-title mt-3"> <%= camp.title %> </h5>
            <p class="card-text"> <%= camp.description %> </p>
            <p class="card-text">
                <small class="text-muted"> <%= camp.location %> </small>
            </p>
            <a href="/campgrounds/<%= camp._id %> " class="btn btn-primary mb-2">
                View <%= camp.title %>
            </a>
        </div>
    </div>
</div>
<% } %>
<script> 
    const mapBoxToken = '<%- process.env.MAPBOX_TOKEN %>';
    const campgrounds = {features: <%- JSON.stringify(camps) %> }
</script>
<script src="/javascript/clusterMap.js"></script>