        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="title" value=" <%= camp.title %>">
        </div>
        <div>
            <label for="location">location</label>
            <input type="text" id="location" name="location" 
            value="<%= camp.location %>">
